{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "Issuer": "http://auth-service",
    "Audience": "http://api-gateway",
    "TokenLifetimeMinutes": 30
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" }
        ]
      },
      "coreRoute": {
        "ClusterId": "coreCluster",
        "Match": {
          "Path": "/api/core/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/core" }
        ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDest": {
            "Address": "http://localhost:8080/"
          }
        }
      },
      "coreCluster": {
        "Destinations": {
          "coreDest": {
            "Address": "http://localhost:8081/"
          }
        }
      }
    }
  },
  "RateLimiter": {
    "PermitLimit": 100,
    "WindowM": 1,
    "QueueLimit": 0
  }
}

